{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "🔧 Current Work Directory",
			"type": "go",
			"request": "launch",
			"mode": "debug",
			"program": "${fileDirname}",
			"cwd": "${fileDirname}",
			"console": "integratedTerminal"
		},
		{
			"name": "📝 Work1 - Word Counter",
			"type": "go",
			"request": "launch",
			"mode": "debug",
			"program": "${workspaceFolder}/work1",
			"cwd": "${workspaceFolder}/work1",
			"args": [
				"--file=chehov.txt"
			]
		},
		{
			"name": "📝 Work2 - JSON parser",
			"type": "go",
			"request": "launch",
			"mode": "debug",
			"program": "${workspaceFolder}/work2",
			"cwd": "${workspaceFolder}/work2",
			"args": [
				"--file=order.json",
				"--keys=id,total_amount,paid,customer.name,customer.address.street"
			]
		}
	]
}